# ============================================================================
# .env.example — Environment Variable Template
# ============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# NEVER commit .env to version control — it contains secrets.
# This .env.example file is safe to commit because it contains only
# placeholder values, not real secrets.
#
# Docker Compose automatically reads .env files in the same directory.
# You can also pass env files to docker run:
#   docker run --env-file .env -p 8000:8000 production-app
# ============================================================================

# -- Application --
APP_NAME=production-app
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# -- Server --
HOST=0.0.0.0
PORT=8000
WORKERS=2

# -- Database --
# Format: postgresql://username:password@hostname:port/database_name
# For local development with SQLite, use: sqlite:///./local.db
DATABASE_URL=postgresql://appuser:CHANGE_ME@db:5432/appdb

# -- CORS --
# Comma-separated list of allowed origins.
# Use * for development. Restrict to specific domains in production.
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
